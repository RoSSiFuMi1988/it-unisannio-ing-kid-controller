<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="109dp"
        android:inputType="textPersonName"
        android:text="Username" 
        android:selectAllOnFocus= "true"/>

    <Button
        android:id="@+id/register"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="424dp"
        android:onClick="callIntent"
        android:text="@string/Register" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="77dp"
        android:text="Username:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="164dp"
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/PasswordEditText"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="199dp"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:text="Password" />

    <CheckBox
        android:id="@+id/rememberPasswordCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="248dp"
        android:text="Remember password" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="293dp"
        android:onClick="callIntent"
        android:text="Login" />

</AbsoluteLayout>